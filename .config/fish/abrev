#git abbr
abbr -a -g gc 'git commit -m'
abbr -a -g gs 'git status'
abbr -a -g ga 'git add'
abbr -a -g gclo 'git clone'
abbr -a -g gps 'git push'
abbr -a -g gpl 'git pull'
abbr -a -g add 'config add'
abbr -a -g commit 'config commit -m'
abbr -a -g push 'config push'
abbr -a -g tag 'git tag'

#pacman abbr
abbr -a -g orph 'pacman -Qdtq'
abbr -a -g inst 'sudo pacman -S'
abbr -a -g cherch 'pacman -Ss'
abbr -a -g remove 'sudo pacman -Rns'
abbr -a -g clean 'yay -Sc'

#pipenv & python abrv
abbr -a -g pvs 'pipenv shell'
abbr -a -g pvi 'pipenv install'
abbr -a -g pvr 'pipenv run'
abbr -a -g pt 'clear;ipython'

